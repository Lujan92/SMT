@model SMT.Models.DB.Portafolio.ImpresionHeaderPortafolio

@if (Model.portafolios.Where(i => i.TipoPortafolio.Nombre == Model.tipo).Count() > 0)
{
    foreach (SMT.Models.DB.Portafolio port in Model.portafolios.Where(i => i.TipoPortafolio.Nombre == Model.tipo))
    {
        <th class="text-center" colspan="@(Model.portafolios.Where(i => i.TipoPortafolio.Nombre == Model.tipo && i.Activo1 == true).Count() +
                                            Model.portafolios.Where(i => i.TipoPortafolio.Nombre == Model.tipo && i.Activo2 == true).Count() +
                                            Model.portafolios.Where(i => i.TipoPortafolio.Nombre == Model.tipo && i.Activo3 == true).Count() +
                                            Model.portafolios.Where(i => i.TipoPortafolio.Nombre == Model.tipo && i.Activo4 == true).Count() +
                                            Model.portafolios.Where(i => i.TipoPortafolio.Nombre == Model.tipo && i.Activo5 == true).Count() + 
                                            Model.portafolios.Where(i => i.TipoPortafolio.Nombre == Model.tipo).Count() + 2)">@port.Nombre</th>
    }
}