                    @Html.ValidationMessageFor(i => i.Reactivo4)
                    @*<input type="number" id="requerimiento4" name="requerimiento4" max="10" min="0" required class="form-control" />*@
                </td>
                <td>@Html.CheckBoxFor(i => i.Activo4)</td>
            </tr>
            <tr class="resaltar">
                <td>
                    @Html.TextBoxFor(i => i.Aspecto5, new { @class = "form-control form-control-oculto ignore", placeholder = "Aspecto 5", required = "required" })
