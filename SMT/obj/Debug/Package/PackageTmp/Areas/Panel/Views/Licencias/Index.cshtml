
@{
    ViewBag.Title = "Licencias";
}

@section styles{
    
    <style>
        #tLicencias .dropdown-menu{
            top:auto !important;
        }
    </style>
    }

<div class="panel panel-default">
    <div class="panel-heading">

        <h3 class="panel-title">@ViewBag.title</h3>
    </div>
    <div class="panel-body">
        <form id="frmBusqueda">
            <div class="col-md-4">
                <label>Busqueda</label>
                <input type="text" name="busqueda" class="form-control" />
            </div>
            <button class="btn btn-primary" style="margin-top:25px">Buscar</button>

            <div class="btn-group pull-right">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-plus"></i> Agregar nueva licencia <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a data-nueva="escuela" href="#"><i class="fa fa-university"></i> Escuela</a></li>
                    <li><a data-nueva="maestro" href="#"><i class="fa fa-user"></i> Maestro</a></li>
                    <li><a data-nueva="tutor" href="#"><i class="fa fa-user"></i> Padre de Familia</a></li>
                </ul>
            </div>
        </form>
        <table id="tLicencias" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Licencia principal</th>
                    <th>Tipo</th>
                    <th>Vigencia</th>
                    <th>Numero de licencias</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="4" class="text-center">No hay licencias disponibles</td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="10" class="text-center">
                        <div class="paginacion"></div>
                    </td>
                </tr>
            </tfoot>
        </table>
        <div class="btn-group pull-right">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-plus"></i> Agregar nueva licencia <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><a  data-nueva="escuela" href="#"><i class="fa fa-university"></i> Escuela</a></li>
                <li><a  data-nueva="maestro" href="#"><i class="fa fa-user"></i> Maestro</a></li>
                <li><a  data-nueva="tutor" href="#"><i class="fa fa-user"></i> Padre de Familia</a></li>
            </ul>
        </div>

    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.validate.zmessages.js"></script>
    <script src="~/Scripts/paginacion.js"></script>

    <script src="~/areas/panel/scripts/apps/licencias/licencias.js"></script>
}