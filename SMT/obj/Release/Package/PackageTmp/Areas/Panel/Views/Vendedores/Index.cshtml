
@{
    ViewBag.Title = "Vendedores";
}

<h2>@ViewBag.title</h2>

<div  class="form-group col-md-12 col-sm-12">
    <form id="frmBusqueda">
        <div class="col-md-5 col-sm-5">
            <label>Busqueda</label>
            <input type="text" placeholder="Buscar por nombre o email" class="form-control" />
        </div>
        @if (User.IsInRole("Root"))
        {
            <div class="col-md-3 col-sm-3">
                <label>Entidad</label>
                @Html.DropDownList("entidad", new SelectList(ViewBag.entidades, "Numero", "Nombre"), "Seleccione una opción", new { @class = "form-control" })
            </div>
        }
        <div class="col-md-1 col-sm-1">
            <button class="btn btn-primary" style="margin-top:25px">Buscar</button>
        </div>
    </form>
</div>

<table id="tResults" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Entidad</th>
            @if (User.IsInRole("Root"))
            {
                <th>Pagada</th>
                <th></th>
            }
        </tr>
    </thead>
    <tbody></tbody>
    <tfoot>
        <tr>
            <td colspan="10">
                <div class="paginacion"></div>
            </td>
        </tr>
    </tfoot>
</table>

@section scripts{
    <script>
        var _root = "@(User.IsInRole("Root") ? "true" : "false")" == "true";
    </script>
<script src="~/Scripts/paginacion.js"></script>
<script src="~/Areas/Panel/Scripts/apps/vendedores/Vendedor.js"></script>
}