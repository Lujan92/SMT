@model SMT.Models.DB.Portafolio.ImpresionHeaderPortafolio
    @{ 
        float total = 0;
    }

@if (Model.portafolios.Where(i => i.TipoPortafolio.Nombre == Model.tipo).Count() > 0)
{
    foreach (SMT.Models.DB.Portafolio port in Model.portafolios.Where(i => i.TipoPortafolio.Nombre == Model.tipo))
    {
        var alumno = port.PortafolioAlumno.Where(i => i.IDAlumno == Model.alumno).FirstOrDefault();
        if (port.Activo1 == true)
        {
            <td class="text-center">@(alumno.Aspecto1)</td>
        }
        if (port.Activo2 == true)
        {
            <td class="text-center">@(alumno.Aspecto2)</td>
        }
        if (port.Activo3 == true)
        {
            <td class="text-center">@(alumno.Aspecto3)</td>
        }
        if (port.Activo4 == true)
        {
            <td class="text-center">@(alumno.Aspecto4)</td>
        }
        if (port.Activo5 == true)
        {
            <td class="text-center">@(alumno.Aspecto5)</td>
        }

        total = float.Parse(alumno.Aspecto1) + float.Parse(alumno.Aspecto2) + float.Parse(alumno.Aspecto3) + float.Parse(alumno.Aspecto4) + float.Parse(alumno.Aspecto5);
        <td class="text-center">@(SMT.Models.Util.calificacionSEP10String(total))</td>
    }
}