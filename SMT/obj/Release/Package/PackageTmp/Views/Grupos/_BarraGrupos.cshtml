@model SMT.Models.DB.Grupos[]
@{

    foreach (var m in Model)
    {

        string colorTexto = m.Color == "#ebebeb" || m.Color == null ? "text-black" : "";
        <div class="col-md-3 text-white">
            <div class="panel" style="background-color:@(string.IsNullOrEmpty(m.Color)?"#ebebeb":m.Color)">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <div class="huge @colorTexto">@m.Grado@m.Grupo</div>
                            
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="text-medium text-overflow @colorTexto">@m.Materia</div>
                            <div class="text-overflow @colorTexto">@m.Escuela (@m.Ciclo)</div>
                        </div>
                    </div>
                </div>

                <div class="panel-footer">
                    <span data-toggle="tooltip" data-placement="top" title="Bimestre1">
                        @Html.ActionLink("1", "Index", "Bimestre", new { grupo = m.IDGrupo, bimestre = 1 }, new { @class = "btn btn-default btn-circle" })
                    </span>
                    <span data-toggle="tooltip" data-placement="top" title="Bimestre2">
                        @Html.ActionLink("2", "Index", "Bimestre", new { grupo = m.IDGrupo, bimestre = 2 }, new { @class = "btn btn-default btn-circle" })
                    </span>
                    <span data-toggle="tooltip" data-placement="top" title="Bimestre3">
                        @Html.ActionLink("3", "Index", "Bimestre", new { grupo = m.IDGrupo, bimestre = 3 }, new { @class = "btn btn-default btn-circle"})
                    </span>
                    <span data-toggle="tooltip" data-placement="top" title="Bimestre4">
                        @Html.ActionLink("4", "Index", "Bimestre", new { grupo = m.IDGrupo, bimestre = 4 }, new { @class = "btn btn-default btn-circle" })
                        </span>
                    <span data-toggle="tooltip" data-placement="top" title="Bimestre5">
                        @Html.ActionLink("5", "Index", "Bimestre", new { grupo = m.IDGrupo, bimestre = 5 }, new { @class = "btn btn-default btn-circle" })
                    </span>

                        <div class="dropdown pull-right visor-oculto" data-toggle="tooltip" data-placement="top" title="Configuracion">
                            <a id="btn@(m.IDGrupo)" href="javascript.void(0);" class="btn text-black" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="fa fa-cog"></span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="btn@(m.IDGrupo)">
                                <li><a href="#" onclick="Crear('@m.IDGrupo')">Configurar</a></li>
                                <li><a href="#" onclick="clonar('@m.IDGrupo')">Clonar</a></li>
                                @if (m.Status != 2)
                                {
                                    <li><a href="#" onclick="ArchivarGrupo('@m.IDGrupo',true)">Archivar</a></li>
                                }
                                else
                                {
                                    <li><a href="#" onclick="ArchivarGrupo('@m.IDGrupo',false)">Desarchivar</a></li>
                                }
                                <li><a href="#" onclick="EliminarGrupo('@m.IDGrupo')">Eliminar</a></li>
                            </ul>
                        </div>
                        <div class="clearfix"></div>
</div>

            </div>
        </div>

    }
}
