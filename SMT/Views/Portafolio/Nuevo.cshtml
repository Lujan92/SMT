                    @Html.ValidationMessageFor(i => i.Reactivo5)
                    @*<input type="number" id="requerimiento5" name="requerimiento5" max="10" min="0" required class="form-control" />*@
                </td>
                <td>@Html.CheckBoxFor(i => i.Activo5)</td>
            </tr>
        </tbody>
    </table>
}