@model SMT.Models.DB.Portafolio

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "frmPortafolio" }))
{
    @Html.HiddenFor(i => i.IDBimestre)
    @Html.HiddenFor(i => i.IDGrupo)
    @Html.HiddenFor(i => i.IDPortafolio)

    <div class="col-lg-12 form-group">
        @Html.LabelFor(i => i.Nombre)
        @Html.TextBoxFor(i => i.Nombre, new { @class = "form-control" })
        @Html.ValidationMessageFor(i => i.Nombre)
    </div>
    <div class="col-lg-6 form-group">
        @Html.LabelFor(i => i.FechaEntrega)
        <input type="text" id="FechaEntrega" name="FechaEntrega" class="form-control" required />
        @Html.ValidationMessageFor(i => i.FechaEntrega)
    </div>
    <div class="col-lg-6 form-group">
        @Html.LabelFor(i => i.IDTipoPortafolio)
        @Html.DropDownListFor(i => i.IDTipoPortafolio, new SelectList(ViewBag.tipos, "id", "name"), new { @class = "form-control" })
        @Html.ValidationMessageFor(i => i.IDTipoPortafolio)
    </div>
    <div class="col-lg-12 form-group">
        @Html.LabelFor(i => i.Descripcion)
        @Html.TextAreaFor(i => i.Descripcion, new { @class = "form-control" })
        @Html.ValidationMessageFor(i => i.Descripcion)
    </div>

    <table class="table table-condensed table-striped table-hover text-center">
        <thead>
            <tr>
                <th colspan="4">Aspectos de evaluación</th>
            </tr>
            <tr>
                <th class="col-lg-4">Aspecto</th>
                <th class="col-lg-6">Criterio de evaluación</th>
                <th class="col-lg-6">Aciertos maximos</th>
                <th class="col-lg-2">Activo</th>
            </tr>
        </thead>
        <tbody>
            <tr class="resaltar">
                <td>
                    @Html.TextBoxFor(i => i.Aspecto1, new { @class = "form-control form-control-oculto", placeholder = "Aspecto1", required = "required" })
                    @Html.ValidationMessageFor(i => i.Aspecto1)
                </td>
                <td>
                    @Html.TextAreaFor(i => i.Criterio1, new { @class = "form-control form-control-oculto", placeholder = "Ejemplo:\n1 - Si lo incluye\n2 - Faltante\n3 - No lo incluye", required = "required" })
                    @Html.ValidationMessageFor(i => i.Criterio1)
                </td>
                <td>
                    @Html.TextBoxFor(i => i.Reactivo1, new { @class = "form-control", min = 0, max = 10, type = "number", required = "required" })
                    @Html.ValidationMessageFor(i => i.Reactivo1)
                    @*<input type="number" id="requerimiento1" name="requerimiento1" max="10" min="0" required class="form-control" />*@
                </td>
                <td>@Html.CheckBoxFor(i => i.Activo1, new { data_aspecto = "1" })</td>
            </tr>
            <tr class="resaltar">
                <td>
                    @Html.TextBoxFor(i => i.Aspecto2, new { @class = "form-control form-control-oculto", placeholder = "Aspecto 2", required = "required" })
                    @Html.ValidationMessageFor(i => i.Aspecto2)
                </td>
