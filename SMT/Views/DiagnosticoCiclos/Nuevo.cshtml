@model SMT.Models.DB.DiagnosticoCiclo
@{
    ViewBag.Title = "Nuevo";
}



@using (Html.BeginForm("", "", FormMethod.Post, new { id = "frmDiagnosticoCiclo" }))
{
    @Html.Hidden("Grupo")
    @Html.HiddenFor(i => i.IDBimestre)
    @Html.HiddenFor(i => i.IDDiagnosticoCiclo)

    <div class="form-group">
        <label>Titulo</label>
        <input type="text" name="Titulo" maxlength="100" minlength="3" required class="form-control" />
    </div>
    <div class="row">
        <div class="form-group  col-lg-6">
            <label>Fecha de diagnostico</label>
            <input type="text" id="FechaEntrega" name="FechaEntrega" required class="form-control" />
        </div>
    </div>

    <div class="panel-group form-group" id="preguntas" role="tablist" aria-multiselectable="true">

    </div>

    <div class="form-group">
        <button class="btn btn-primary" data-option="pregunta-ciclo" type="button">+ Pregunta</button>
    </div>

}

<div data-template="pregunta" class="hide">
    <div data-pregunta="" class="panel panel-default resaltar">
        <div class="panel-heading" role="tab" id="heading{index}">
            <h4 class="panel-title">
                <a role="button" data-toggle="collapse" data-parent="#preguntas" href="#{index}" aria-expanded="true" aria-controls="{index}">
                    {Nombre} <span data-option="eliminar-pregunta" class="pull-right fa fa-trash"></span>
                </a>
            </h4>
        </div>
        <div id="{index}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading{index}">
            <div class="panel-body">
                <input type="hidden" name="DiagnosticoCicloTema[{index}].IDTema" />
                <input type="hidden" name="DiagnosticoCicloTema[{index}].Archivo" />
                <div class="form-group">
                    <label>Tema</label>
                    <input type="text" name="DiagnosticoCicloTema[{index}].Nombre" maxlength="50" minlength="3" required class="form-control" />
                </div>
                <div class="form-group">
                    <label>Tipo</label>
                    <select name="DiagnosticoCicloTema[{index}].TipoTema" class="form-control">
                        <option value="Sin personalizar">Sin personalizar</option>
                        <option value="Multiple">Multiple</option>
                        <option value="Columnas">Columnas</option>
                        <option value="Laguna">Laguna</option>
                        <option value="Abierta">Abierta</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Instrucciones</label>
                    <label class="pull-right">
                        Sin instrucciones
                        <input data-no-instrucciones="DiagnosticoCicloTema[{index}].Instrucciones" type="checkbox" />
                    </label>
                    <input type="text" name="DiagnosticoCicloTema[{index}].Instrucciones" class="form-control" />
                </div>
               
                <div class="form-group">
                    <label>Pregunta</label>
                    <textarea name="DiagnosticoCicloTema[{index}].Pregunta" minlength="3" required class="form-control"></textarea>
                </div>

                <div data-respuesta="Multiple,Laguna" class="hide">
                    <div class="form-group">
                        <textarea name="DiagnosticoCicloTema[{index}].Respuesta" class="form-control"></textarea>
                    </div>
                </div>
                <div data-respuesta="Columnas" class="hide row">
                    <div class="form-group col-lg-6">
                        <label>Columna 1</label>
                        <textarea name="DiagnosticoCicloTema[{index}].Respuesta1" class="form-control"></textarea>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>Columna 2</label>
                        <textarea name="DiagnosticoCicloTema[{index}].Respuesta2" class="form-control"></textarea>
                    </div>
                </div>

                <div data-respuesta="Abierta" class="hide">
                    <label>Archivo</label>
                    <input type="file" name="DiagnosticoCicloTema[{index}].file" />
                </div>
                <div class="form-group">
                    <label>Reactivos</label>
                    <input type="number" name="DiagnosticoCicloTema[{index}].Reactivos" max="100" min="0" required class="form-control" />
                </div>
            </div>
        </div>
    </div>
</div>