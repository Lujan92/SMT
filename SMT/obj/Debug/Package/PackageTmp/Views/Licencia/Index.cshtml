
@{
    ViewBag.Title = "Licencias";
}
<style>
    a.ayuda {
        border-radius:100%;
    }
</style>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">@ViewBag.title <sup>@Html.Partial("_Ayuda", "https://www.youtube.com/watch?v=8-17EMe2iXM", new ViewDataDictionary { { "class", "btn btn-xs btn-info pull-right ayuda" } })</sup></h3>
    </div>
    <div class="panel-body">
        <form id="frmBusqueda">
            <div class="col-md-4">
                <label>Busqueda</label>
                <input type="text" name="busqueda" class="form-control" />
            </div>
            <div class="col-md-2">
                <label>Tipo</label>
                <select name="tipo" class="form-control">
                    <option value=""></option>
                    <option>MAESTRO</option>
                    <option>TUTOR</option>
                </select>
            </div>
            <button class="btn btn-primary" style="margin-top:25px">Buscar</button>
        </form>
        <table id="tCredenciales" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Licencia</th>
                    <th>Tipo</th>
                    <th>Vigencia</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="4" class="text-center">No hay licencias disponibles</td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="10">
                        <div class="paginacion"></div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section scripts{
<script src="~/Scripts/paginacion.js"></script>
    <script src="~/Scripts/apps/Credenciales/Credenciales.js"></script>    
}