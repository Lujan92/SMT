@{ 
    ViewBag.Title = "Reporte Escuela";
}
<style>
    #tGrupos tbody tr { cursor:pointer }
</style>
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">&nbsp;</h4>
    </div>
    <div class="panel-body">
        <div class="col-lg-12">
            <table id="tGrupos" class="table table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th>Materia</th>
                        <th>Nombre</th>
                        <th>Grupo</th>
                        <th></th>
                    </tr>
                    <tr data-info>
                        <td colspan="5">
                            <div class="info alert alert-info text-center" role="alert">
                                <span class="fa fa-spin fa-refresh"></span>
                                <span class="text">Cargando grupos</span>
                            </div>
                        </td>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

        <div class="col-lg-12">
            <span class="dropdown">
                <a href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="btn btn-default text-black">
                    Bimestre <span name="numBimestre">1</span>
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" aria-labelledby="dLabel">
                    <li><a onclick="ReporteEscuela.cambiar('1')" href="javascipt:void(0);">Bimestre 1</a></li>
                    <li><a onclick="ReporteEscuela.cambiar('2')" href="javascipt:void(0);">Bimestre 2</a></li>
                    <li><a onclick="ReporteEscuela.cambiar('3')" href="javascipt:void(0);">Bimestre 3</a></li>
                    <li><a onclick="ReporteEscuela.cambiar('4')" href="javascipt:void(0);">Bimestre 4</a></li>
                    <li><a onclick="ReporteEscuela.cambiar('5')" href="javascipt:void(0);">Bimestre 5</a></li>
                </ul>
            </span>
            <button data-generar class="btn btn-success">Generar</button>
        </div>
    </div>
</div>

<script src="~/Scripts/stupidtable.js"></script>
<script src="~/Scripts/apps/ReporteEscuela/ReporteEscuela.js"></script>