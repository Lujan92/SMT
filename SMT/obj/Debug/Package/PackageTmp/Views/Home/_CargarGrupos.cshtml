@model SMT.Models.DB.Grupos[]
<style>
    .circulo_menu{
        padding: initial!important;
        height: 18px!important;
        width: 17px!important;
    }
</style>
<li>
    <a class="text-center" style="padding:10px;" href="/Grupos">
        <strong>Ver Grupos</strong>
        <i class="fa fa-angle-right"></i>
    </a>
</li>
@foreach (var m in Model)
{
    string colorTexto = m.Color == "#ebebeb" || m.Color == null ? "text-black" : "";
    <li>
        <div class="col-md-12 text-white">
            <div class="panel" style="background-color:@m.Color">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <div class="small @colorTexto">@m.Grado@m.Grupo</div>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="@colorTexto text-overflow ">@m.Materia</div>                            
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    @Html.ActionLink("1", "Index", "Bimestre", new { grupo = m.IDGrupo, bimestre = 1 }, new { @class = "btn btn-default btn-circle circulo_menu" })
                    @Html.ActionLink("2", "Index", "Bimestre", new { grupo = m.IDGrupo, bimestre = 2 }, new { @class = "btn btn-default btn-circle circulo_menu" })
                    @Html.ActionLink("3", "Index", "Bimestre", new { grupo = m.IDGrupo, bimestre = 3 }, new { @class = "btn btn-default btn-circle circulo_menu" })
                    @Html.ActionLink("4", "Index", "Bimestre", new { grupo = m.IDGrupo, bimestre = 4 }, new { @class = "btn btn-default btn-circle circulo_menu" })
                    @Html.ActionLink("5", "Index", "Bimestre", new { grupo = m.IDGrupo, bimestre = 5 }, new { @class = "btn btn-default btn-circle circulo_menu" })
                </div>
            </div>
        </div>
    </li>

}
