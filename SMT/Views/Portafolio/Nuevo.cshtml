                    @Html.TextAreaFor(i => i.Criterio2, new { @class = "form-control form-control-oculto", placeholder = "Ejemplo:\n1 - Si lo incluye\n2 - Faltante\n3 - No lo incluye", required = "required" })
                    @Html.ValidationMessageFor(i => i.Criterio2)

                </td>
                <td>
                    @Html.TextBoxFor(i => i.Reactivo2, new { @class = "form-control", min = 0, max = 10, type = "number", required = "required" })
                    @Html.ValidationMessageFor(i => i.Reactivo2)
                    @*<input type="number" id="requerimiento2" name="requerimiento2" max="10" min="0" required class="form-control" />*@
                </td>
                <td>@Html.CheckBoxFor(i => i.Activo2)</td>
            </tr>
            <tr class="resaltar">
                <td>
                    @Html.TextBoxFor(i => i.Aspecto3, new { @class = "form-control form-control-oculto ignore", placeholder = "Aspecto 3", required = "required" })
