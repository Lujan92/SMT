@model SMT.Models.DB.Portafolio.ImpresionHeaderPortafolio

@if (Model.portafolios.Where(i => i.TipoPortafolio.Nombre == Model.tipo).Count() > 0)
{
    foreach (SMT.Models.DB.Portafolio port in Model.portafolios.Where(i => i.TipoPortafolio.Nombre == Model.tipo))
    {
        if (port.Activo1 == true)
        {
            <th class="vertical">@(SMT.Models.Util.substring( port.Aspecto1,12))</th>
        }
        if (port.Activo2 == true)
        {
            <th class="vertical">@(SMT.Models.Util.substring(port.Aspecto2, 12))</th>
        }
        if (port.Activo3 == true)
        {
            <th class="vertical">@(SMT.Models.Util.substring(port.Aspecto3, 12))</th>
        }
        if (port.Activo4 == true)
        {
            <th class="vertical">@(SMT.Models.Util.substring(port.Aspecto4, 12))</th>
        }
        if (port.Activo5 == true)
        {
            <th class="vertical">@(SMT.Models.Util.substring(port.Aspecto5, 12))</th>
        }
        <th class="vertical">Calificación</th>
    }
}