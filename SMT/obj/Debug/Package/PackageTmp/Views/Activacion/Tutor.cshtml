
@{
    ViewBag.Title = "Activar Padre de Familia";
}

<div class="col-lg-12">
    <h2 class="text-center">Padre de Familia SMT</h2>
    <div class="col-lg-6 col-lg-offset-3">
        <h3 class="text-center">
            Su cuenta de Padre de Familia ha sido activada correctamente!
        </h3>
    </div>
    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
        <div class="col-lg-6 col-md-6 col-sm-6">
            <img class="img-responsive" src="~/Content/Images/es_badge_web_generic_resized.png" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <img style="width:100%;" class="img-responsive" src="~/Content/Images/Download_on_the_App_Store_Badge_ES_135x40.svg" />
        </div>
    </div>
    <p class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
        <a href="@Url.Action("Index", "Tutor")" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 btn btn-success big">Ir a Tutor!</a>
    </p>
</div>

    @section styles {
        <style>
            body {
                background: #040617;
            }

            html, body {
                height: 100%;
                margin: 0;
                padding: 0;
            }

            h1, h2, h3, .white {
                color: #E2E2E2;
            }

            .row-fluid {
                height: 100%;
                display: table-cell;
                vertical-align: middle;
            }

            .small-box {
                cursor: pointer;
                position: relative;
            }

            .container-fluid {
                height: 100%;
                display: table;
                width: 100%;
                padding: 0;
            }

            .centering {
                float: none;
                margin: 0 auto;
            }

            .big {
                font-size: 1.5em;
                padding: 20px;
                margin: 5px 0;
            }
        </style>
    }

