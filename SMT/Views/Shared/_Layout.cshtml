<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="language" content="spanish"/>
    <meta http-equiv="content-language" content="es" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.title</title>
    <script>var __url__ = '@Url.Content("~/")'</script>
    <!-- Bootstrap Core CSS -->
    <link href="/Content/bootstrap.min.css" rel="stylesheet">
    <!-- MetisMenu CSS -->
    <link href="/Content/theme/metisMenu/dist/metisMenu.min.css" rel="stylesheet">
    <!-- Timeline CSS -->
    <link href="/Content/theme/css/timeline.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/Content/theme/css/sb-admin-2.css" rel="stylesheet">
    
    <!-- Custom Fonts -->
    <link href="/Content/theme/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <link href="/Content/plugins/pnotify/jquery.pnotify.css" rel="stylesheet">
    <link href="/Content/plugins/pnotify/jquery.pnotify.icons.css" rel="stylesheet">
    <link href="/Content/plugins/pace/themes/blue/pace-theme-flash.css" rel="stylesheet">
    
    <link href="/Content/site.css" rel="stylesheet">
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    
    @if (User.Identity.IsAuthenticated)
    {        
        <!-- Navigation -->
        <div id="wrapper">
            <!-- Navigation -->
            <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    
                    <!--<a class="navbar-brand" href="/" style="background-image:url('/Content/SMTLogo.png');background-repeat:no-repeat;height:40px;width:329px;margin:5px"></a>
                        -->
                    <a href="/"><img class="img-responsive" style="padding:5px;" src="~/Content/SMTLogo.png" /></a>
                    
</div>
                              
                
                <!-- /.navbar-header -->
                @Html.Partial("_LoginPartial")
                <!-- /.navbar-top-links -->
                
                <!-- /.navbar-static-side -->
            </nav>
            <div id="page-wrapper" class="">
                @RenderBody()
            </div>
            
            <!-- /#page-wrapper -->
        </div>

        <!-- Metis Menu Plugin JavaScript -->
        <script src="/Content/theme/metisMenu/dist/metisMenu.min.js"></script>
        <!-- Morris Charts JavaScript -->
        <script src="/Content/theme/raphael/raphael-min.js"></script>
        <script src="/Content/theme/morrisjs/morris.min.js"></script>

        <!-- Custom Theme JavaScript -->
        <script src="/Content/theme/js/sb-admin-2.js"></script>

                            }
                            else
                            {
        <div class="container">
            @RenderBody()
        </div>
    }
    <script src="/Scripts/load.js"></script>
   @* <script src="/Content/plugins/pace/pace.min.js"></script> se quita temporalmente por conflicto con scripts *@
    <script src="/Content/plugins/pnotify/jquery.pnotify.min.js"></script>
 
    <script src="/Scripts/utilidades.js"></script>
    @if (User.Identity.IsAuthenticated)
    {
        <script src="~/Scripts/apps/Credenciales/Visor.js"></script>    
    }
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            $.ajax({
                type: 'GET',
                url: '/Home/CargarGrupos',                
            })
            .done(function (data) {
                $('#menuGrupos').empty(data);
                $('#menuGrupos').append(data);                      
            });
        })
        var busquedaAlm = function () {
            var nombre = "";
            $(".busquedanombrealumno").each(function () {
                if ($(this).val().length>0) {
                    nombre += $(this).val();
                }
            })
             
            window.location = "/Alumnos/Buscador?nombre=" + nombre;
            return false;
        }
    </script>
</body>
</html>
